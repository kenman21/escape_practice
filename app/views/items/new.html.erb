<h1>POST ITEMS</h1>
<%= form_for @item do |f| %>
  <%= f.label :name %>
  <%= f.text_field :name %>
  <%= f.label :description %>
  <%= f.text_area :description %>
  <%= f.label :price %>
  <%= f.number_field :price %>
  <%= f.hidden_field :seller_id, value: session[:user_id] %>
  <%= f.submit "Post Item" %>
<% end %>
